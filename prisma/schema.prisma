generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(uuid())
  name              String       
  email             String      @unique
  password          String
  role              Role
  classrooms        Classroom[] @relation("UserClassrooms")
  assignedClassroom Classroom?  @relation("TeacherClassroom")
  classroomId       String?
}

model Classroom {
  id        String        @id @default(uuid())
  name      String
  schedules Schedule[]
  students  User[]     @relation("UserClassrooms")
  teacher   User?      @relation("TeacherClassroom", fields: [teacherId], references: [id])
  teacherId String? @unique
  timetable Timetable[]
}

model Schedule {
  id          String       @id @default(uuid())
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  classroomId String
  day         Days
  startTime   DateTime
  endTime     DateTime
}

model Timetable {
  id          String       @id @default(uuid())
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  classroomId String
  subject     String
  startTime   DateTime
  endTime     DateTime
}

enum Role {
  PRINCIPAL
  TEACHER
  STUDENT
}

enum Days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
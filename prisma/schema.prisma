generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  name        String       
  email       String      @unique
  password    String
  role        Role
  classroom   Classroom?  @relation("StudentClassroom", fields: [classroomId], references: [id],onDelete: Cascade)
  classroomId String?
  teaching    Classroom?  @relation("TeacherClassroom")
}

model Classroom {
  id        String      @id @default(uuid())
  name      String
  schedules Schedule[]
  students  User[]      @relation("StudentClassroom")
  teacher   User?       @relation("TeacherClassroom", fields: [teacherId], references: [id],onDelete: SetNull)
  teacherId String?     @unique
}

model Schedule {
  id          String       @id @default(uuid())
  classroom   Classroom @relation(fields: [classroomId], references: [id],onDelete: Cascade)
  classroomId String
  day         Days
  startTime   String
  endTime     String
  lectures    Lecture[]
}

model Lecture {
  id          String       @id @default(uuid())
  schedule    Schedule @relation(fields: [scheduleId], references: [id],onDelete: Cascade)
  scheduleId  String
  subject     String
  startTime   String
  endTime     String
}

enum Role {
  PRINCIPAL
  TEACHER
  STUDENT
}

enum Days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
